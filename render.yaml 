services:
  # BACKEND SERVICE
  - type: web
    name: goal-breaker-backend
    runtime: docker
    region: frankfurt
    rootDir: backend
    plan: starter
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: goal-breaker-db
          property: connectionString
      - key: OPENROUTER_API_KEY
        sync: false # You will be prompted to enter this in Render dashboard
      - key: GEMINI_API_KEY
        sync: false
      - key: PORT
        value: 8000

  # FRONTEND SERVICE
  - type: web
    name: goal-breaker-frontend
    runtime: docker
    region: frankfurt
    rootDir: frontend
    plan: starter
    envVars:
      - key: NEXT_PUBLIC_API_URL
        fromService:
          type: web
          name: goal-breaker-backend
          property: url
      - key: DATABASE_URL
        fromDatabase:
          name: goal-breaker-db
          property: connectionString
      - key: BETTER_AUTH_SECRET
        sync: false
      - key: BETTER_AUTH_URL
        value: https://goal-breaker-frontend.onrender.com # Update this if name changes
      - key: GOOGLE_CLIENT_ID
        sync: false
      - key: GOOGLE_CLIENT_SECRET
        sync: false

databases:
  - name: goal-breaker-db
    region: frankfurt
    plan: free